generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  CLIENT
}

enum PostStatus {
  DRAFT
  PUBLISHED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String?
  role      Role     @default(CLIENT)

  // Verificación propia
  emailVerifiedAt DateTime?
  verifyTokenHash String?
  verifyTokenExp  DateTime?

  // Reset password (código)
  resetTokenHash String?
  resetTokenExp  DateTime?

  // Para login social sin tabla Account
  oauthProvider   String?
  oauthSubject    String?

  posts Post[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



model Post {
  id          String     @id @default(cuid())
  title       String
  slug        String     @unique
  excerpt     String?
  content     String
  coverImage  String?
  status      PostStatus @default(DRAFT)

  authorId    String
  author      User       @relation(fields: [authorId], references: [id], onDelete: Restrict)

  publishedAt DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([status, publishedAt])
  @@index([authorId])
}

enum PageStatus {
  ACTIVE
  UNDER_CONSTRUCTION
  INACTIVE
}

model Page {
  id        String     @id @default(cuid())

  /**
   * Path del FO SIN locale. Ej: "/home", "/games", "/account/settings".
   * Debe ser único.
   */
  path      String     @unique

  /** Nombre opcional para mostrar en BO */
  name      String?

  status    PageStatus @default(ACTIVE)

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([status])
}